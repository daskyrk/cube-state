{
  "name": "cube-state",
  "version": "1.0.0-alpha",
  "description": "state management library based on React Hooks",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "min": "terser dist/index.js -o dist/index.min.js",
    "prebuild": "rimraf dist",
    "build": "rollup -c && npm run min && npm run copy",
    "build:watch": "rimraf dist/* && rollup -c -w",
    "format": "prettier --write \"src/**/*.{js,ts,tsx}\"",
    "format:check": "prettier --list-different \"src/**/*.{js,ts,tsx}\"",
    "lint": "tslint -c tslint.json \"src/**/*.{ts,tsx}\"",
    "lint:fix": "tslint -c tslint.json \"src/**/*.{ts,tsx}\" --fix",
    "pretest": "tsc __tests__/*.tsx --noEmit --jsx preserve -m None -t ESNext --moduleResolution Node --isolatedModules --esModuleInterop --skipLibCheck",
    "test": "jest --verbose",
    "test:watch": "jest --watch --verbose",
    "coveralls": "jest --coverage && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js && rm -rf ./coverage",
    "copy": "copyfiles package.json README.md README-cn.md LICENSE dist && npm run copyPlugin && npm run editPackage",
    "copyPlugin": "copyfiles -u 1 src/plugin/* dist",
    "editPackage": "json -I -f dist/package.json -e \"this.private=false; this.devDependencies=undefined; this.scripts=undefined; this.husky=undefined; this.commitlint=undefined; this.jest=undefined; this['lint-staged']=undefined;\"",
    "release": "standard-version"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "{src,__tests__}/*.{js,ts,tsx}": [
      "npm run format",
      "npm run lint:fix",
      "git add"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/daskyrk/cube-state.git"
  },
  "keywords": [
    "react",
    "state",
    "management",
    "hooks"
  ],
  "author": "daskyrk",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/daskyrk/cube-state/issues"
  },
  "homepage": "https://github.com/daskyrk/cube-state#readme",
  "jest": {
    "testPathIgnorePatterns": [
      "/node_modules/",
      "jest",
      "plugin"
    ],
    "coverageDirectory": "./coverage/",
    "collectCoverage": false,
    "coverageReporters": [
      "json",
      "html",
      "text",
      "text-summary"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,ts,tsx}"
    ]
  },
  "dependencies": {
    "fast-deep-equal": "^3.1.1",
    "immer": "^5.3.6"
  },
  "peerDependencies": {
    "react": ">=16.8"
  },
  "devDependencies": {
    "@babel/core": "^7.6.4",
    "@babel/plugin-transform-react-jsx": "^7.3.0",
    "@babel/plugin-transform-typescript": "^7.6.3",
    "@babel/preset-env": "^7.6.3",
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "@testing-library/react": "^9.4.1",
    "@types/jest": "^24.0.21",
    "@types/react": "^16.9.23",
    "@types/react-dom": "^16.9.5",
    "copyfiles": "^2.2.0",
    "coveralls": "^3.0.9",
    "husky": "^3.0.8",
    "jest": "^24.9.0",
    "json": "^9.0.6",
    "lint-staged": "^9.4.1",
    "prettier": "^1.18.2",
    "react": "^16.8.3",
    "react-dom": "^16.8.3",
    "rimraf": "^3.0.0",
    "rollup": "^1.22.0",
    "rollup-plugin-size-snapshot": "^0.11.0",
    "rollup-plugin-typescript2": "^0.24.3",
    "standard-version": "^7.0.0",
    "terser": "^4.3.4",
    "tslint": "^5.20.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-plugin-prettier": "^2.0.1",
    "tslint-react": "^4.1.0",
    "typescript": "^3.6.3"
  }
}
